{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:GetObject",
        "s3:GetObjectAcl",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::saint-esprit-audio/chroniques/*",
        "arn:aws:s3:::saint-esprit-audio/benevoles/*",
        "arn:aws:s3:::saint-esprit-audio/users/${cognito-identity.amazonaws.com:sub}/*",
        "arn:aws:s3:::amplify-saintespritaws-di-saintespritstoragebucket-91ui2ognukke/chroniques/*",
        "arn:aws:s3:::amplify-saintespritaws-di-saintespritstoragebucket-91ui2ognukke/benevoles/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::saint-esprit-audio",
        "arn:aws:s3:::amplify-saintespritaws-di-saintespritstoragebucket-91ui2ognukke"
      ],
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "chroniques/*",
            "benevoles/*",
            "users/${cognito-identity.amazonaws.com:sub}/*"
          ]
        }
      }
    }
  ]
}